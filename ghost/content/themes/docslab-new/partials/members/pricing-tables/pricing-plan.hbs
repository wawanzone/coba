{{#get "tiers" include="monthly_price,yearly_price,benefits" filter="visibility:public+type:paid" limit="all"}}
{{#foreach tiers}}
<div class="col-md-6 col-lg-5">
    <div class="single-price-box">
        <h4 class="plan-name">{{name}}</h4>
        <div class="price-box-content d-flex">
            <div class="price maxw-100 w-100 mr-20">
               <h1 data-monthly ><sup>{{price currency=currency}}</sup><span>{{#if monthly_price}}{{price monthly_price}}{{else}}$0{{/if}}</span></h1>
               <h1 data-yearly ><sup>{{price currency=currency}}</sup><span>{{#if yearly_price}}{{price yearly_price}}{{else}}$0{{/if}}</span></h1>
            </div>
            <div class="price-inner-content">
                <h4 class="price-head" data-monthly>{{t "Monthly"}}</h4>
                <h4 class="price-head" data-yearly>{{t "Yearly"}}</h4>
                <span class="subscribe-text">{{description}}</span>
                {{#if benefits}}                
                <div class="price-box-inner">
                    <ul>
                        {{#foreach benefits as |benefit|}}
                            <li>{{benefit}}</li>
                        {{/foreach}}
                    </ul>
                </div>
                 {{/if}}
                <div class="plan-btn">
                    <a href="javascript:" data-portal="signup/{{id}}/yearly" class="btn subscribe-btn-primary btn-md yearly-plan ">{{t "Subscribe"}}</a>
                    <a href="javascript:" data-portal="signup/{{id}}/monthly" class="btn subscribe-btn-primary btn-md monthly-plan">{{t "Subscribe"}}</a>
                </div>
            </div>
        </div>
    </div>
</div>
{{/foreach}}
{{/get}}