{{#foreach posts visibility="all" order="published_at asc"}}
<div class="post-item-list d-flex justify-content-between align-items-center post-card {{post_class}}">
    {{#if feature_image}}
    <div class="feature-thumb-sm">
        <img class="post-feature-img" srcset="{{img_url feature_image size="s"}} 300w,
            {{img_url feature_image size="m"}} 600w"
            sizes="(max-width: 767px) 100%px, 225px,
            1130px" src="{{img_url feature_image size="s"}}" alt="{{title}}">
    </div>
    {{/if}}
    <div class="tag-content">
        <h5 class="tags-post-title"><a href="{{url}}">{{title}}</a></h5>
            <p class="mb-0">
            {{#if custom_excerpt}}
                    {{custom_excerpt}}
                {{else}}
                    {{excerpt words="50"}}
            {{/if}}
            </p>
        <div class="post-card-meta d-flex justify-content-between flex-wrap align-items-center">
            {{#primary_author}}
            <div class="author-post">
                <a class="d-flex align-items-center" href="{{url}}">
                    {{#if profile_image}}
                    <img class="author mr-10" srcset="{{img_url profile_image size="xxs"}} 30w,
                        {{img_url profile_image size="xs"}} 100w"
                        sizes="50px" src="{{img_url profile_image size="xs"}}" alt="{{name}}">
                    {{/if}} {{name}}
                </a>
            </div> 
            {{/primary_author}}
            <div class="published-date">
                <span class="d-flex align-items-center">{{> "icons/clock"}}&nbsp;&nbsp;{{t "Updated at"}}&nbsp;&nbsp;{{date published_at format="DD MMM, YYYY"}}</span>
            </div>
        </div>
    </div>
</div>
{{/foreach}}