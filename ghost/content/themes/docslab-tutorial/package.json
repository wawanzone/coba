{
    "name": "docslab-tutorial",
    "description": "Docslab is a knowledge base and documentation ghost theme",
    "demo": "https://docslab.electronthemes-ghost.com",
    "version": "1.0.5",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "scripts": {
        "sass": "sass --watch assets/scss:assets/css --style compressed",
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "author": {
        "name": "Electronthemes",
        "email": "electronthemes@gmail.com",
        "url": "http://electronthemes.com/"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Blog"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "documentation-theme",
        "documentation"
    ],
    "config": {
        "posts_per_page": 6,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "sm": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "lm": {
                "width": 777
            },
            "l": {
                "width": 940
            },
            "xl":{
                "width": 1130
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": {
            "exclude": ["bookmark", "gallery"]
        },
        "custom": {
            "select_color_scheme": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark",
                    "Auto"
                ],
                "default": "Light"
            },
           
            "rtl_view": {
                "type": "boolean",
                "default": false
            },
            "search_content_api": {
                "type": "text"
            },
            "github_link": {
                "type": "text"
            },
            "contact_form_endpoint_url": {
                "type": "text"
            },
            "whatsapp_number": {
                "type": "text"
            },
            "show_faq": {
                "type": "boolean",
                "default": false,
                "group": "homepage"
            },
            "show_popular_author": {
                "type": "boolean",
                "default": false,
                "group": "homepage"
            },
            "show_cover_image": {
                "type": "boolean",
                "default": false,
                "group": "homepage"
            },
            "default_post_layout": {
                "type": "select",
                "options": [
                    "Default",
                    "FullWidth Image",
                    "FullWidth Content"
                ],
                "default": "Default",
                "group": "post"
            },            
            "select_comment": {
                "type": "select",
                "options": [
                    "Native Comments",
                    "Disqus",
                    "Disable"
                ],
                "default": "Native Comments",
                "group": "post"
            },
            "disqus_shortname": {
                "type": "text",
                "group": "post"
            }        
        }
    }
}